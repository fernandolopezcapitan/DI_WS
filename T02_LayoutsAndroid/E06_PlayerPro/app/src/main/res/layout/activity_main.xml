<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity"
    android:background="#373b3e"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_down_float"
            android:background="#36373b"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U2"
                android:textSize="15dp"
                android:textColor="#7b7f82" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:transitionGroup="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1/12"
                    android:padding="3dp"
                    android:textSize="15dp"
                    android:textColor="#292a2c"
                    android:background="#b6b5b6" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beautiful Day"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="120dp"
                    android:textSize="20dp"
                    android:textColor="#ffffff"/>

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U218 Singles"
                android:textSize="15dp"
                android:textColor="#7b7f82" />

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/arrow_up_float"
            android:background="#393a3e"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:baselineAlignBottom="false"
            android:clickable="false"
            android:layout_gravity="center_vertical" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_lock_silent_mode"
            android:padding="10dp"
            android:layout_marginRight="35dp"
            android:background="#36373b"

            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:layout_marginRight="10dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_get"
            android:background="#393a3e"
            android:baselineAlignBottom="false"
            android:padding="5dp"
            android:layout_gravity="center_vertical" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:id="@+id/imageView"
            android:src="@drawable/u218singles"
            android:layout_weight="0.47" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_btn_speak_now"
            android:padding="10dp"
            android:layout_marginRight="70dp"
            android:background="#36373b"

            android:layout_gravity="center_vertical"
            android:adjustViewBounds="true" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_rew"
            android:padding="5dp"
            android:background="#36373b"
            android:layout_gravity="center_vertical" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_pause"
            android:padding="5dp"
            android:background="#36373b"
            android:layout_gravity="center_vertical"
            android:id="@+id/btn_play" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_media_ff"
            android:padding="5dp"
            android:layout_marginRight="70dp"
            android:background="#36373b"
            android:layout_gravity="center_vertical"
            android:longClickable="false" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_rotate"
            android:padding="5dp"
            android:background="#36373b"
            android:layout_gravity="center_vertical" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2:46"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="#7b7f82" />

        <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:indeterminate="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:05"
            android:textSize="20dp"
            android:layout_margin="10dp"
            android:textColor="#7b7f82" />




    </LinearLayout>



</LinearLayout>
